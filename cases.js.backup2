// –£–¥–∞–ª–µ–Ω–∏–µ –∫–µ–π—Å–∞
function deleteCase(caseId) {
    const cases = getCases();
    const updatedCases = cases.filter(case_ => case_.id !== caseId);
    localStorage.setItem('cases_data', JSON.stringify(updatedCases));
    loadCasesList();
}

